

<div data-search-challenges-target="list">
  <div class="challenges-container">
    <% challenges.all.each do |challenge| %>
      <% if challenge.category == "Travel" || challenge.category == "Planting trees"%>
        <% color = "card-green" %>
      <% elsif challenge.category == "Conserving water" || challenge.category == "Preventing pollution"%>
        <% color = "card-purple" %>
      <% elsif challenge.category == "Saving energy" || challenge.category == "Recycle"%>
        <% color = "card-dark" %>
      <% elsif challenge.category == "Reuse items" || challenge.category == "Food"%>
        <% color = "card-blue" %>
      <% elsif challenge.category == "Pick up trash" || challenge.category == "Made homemade art"%>
        <% color = "card-pink" %>
      <% end %>

      <!--add icon to category-->
      <% if challenge.category == "Travel"%>
        <% icon1 = '🏖' %>
        <% icon2 = '🏜' %>
      <%elsif challenge.category == "Food"%>
        <% icon1 = '🍔' %>
        <% icon2 = '🍣' %>
      <%elsif challenge.category == "Pick up trash"%>
        <% icon1 = '🗑' %>
        <% icon2 = '🎏' %>
      <%elsif challenge.category == "Planting trees"%>
        <% icon1 = '🌿' %>
        <% icon2 = '🌹' %>
      <%elsif challenge.category == "Conserving water"%>
        <% icon1 = '🛁' %>
        <% icon2 = '🌧' %>
      <%elsif challenge.category == "Preventing pollution"%>
        <% icon1 = '📣' %>
        <% icon2 = '🚲' %>
      <%elsif challenge.category == "Saving energy"%>
        <% icon1 = '🔋' %>
        <% icon2 = '💡' %>
      <%elsif challenge.category == "Recycle"%>
        <% icon1 = '📺' %>
        <% icon2 = '🧴' %>
      <%elsif challenge.category == "Reuse items"%>
        <% icon1 = '👘' %>
        <% icon2 = '🧸' %>
      <%elsif challenge.category == "Made homemade art"%>
        <% icon1 = '🏮' %>
        <% icon2 = '👒' %>
      <% end %>

      <div class="card-challenges">
        <div class="challenge-category">
          <p id="category"><%= icon1 %> - <%= challenge.category %> - <%= icon2 %></p>
        </div>
        <div class="info-challenge">
          <h2><%=challenge.name %></h2>
          <p id="description" ><%= challenge.description %></p>


        </div>

        <div class="challenge-score">
          <p> ★ 𝙎𝙘𝙤𝙧𝙚 ★ &nbsp; <strong><i> <%= challenge.score %> &nbsp; </i></strong> 🍀 <p>
        </div>

      </div>
    <% end %>

  </div>
</div>
