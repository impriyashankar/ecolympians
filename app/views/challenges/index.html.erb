<div class="challenges-index">

  <h1>Explore challenges</h1>

  <div class="challenges-page" data-controller="search-challenges">
    <div class="search-challenges">
      <%= form_with url: challenges_path, method: :get, html: {data: { search_challenges_target: 'form' } } do |f| %>
      <%= text_field_tag :query,
        params[:query],
        class: "searchbar",
        placeholder: "Find a challenge",
        value: params[:query],
        data: {search_challenges_target: 'input', action: "keyup->search-challenges#showChallenges"}
      %>
      <%#= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>

    <div class="create-button-container">
      <a class="btn-welcome" href="<%= new_challenge_path %>">Create new challenge</a>
    </div>

    <div class="challenges">
      <%= render 'challenges/list', challenges: @challenges %>
    </div>
  </div>
</div>
