<!--If coming from user dashboard-->
<div class="container">
  <div class="row">

      <div class="my_groups">
        <h2><strong>My groups</strong></h2>

        <div class="cards-grid"> <!--#changed from card groups-->
          <% current_user.groups.each do |group| %>
          <%# @groups.each do |group| %>
            <%#= link_to group_group_challenges_path(group) do %>
            <div class="card-groups text-center">
              <%= link_to group_path(group) do %>

                <div class= "color-band"></div>
                <div class="card-group-wrapper">
                  <div class="card-group-info-pic">
                    <%=image_tag("leaf.png")%>
                  </div>
                  <div class="card-group-infos">
                    <h3><%= group.name %></h3>
                    <p><strong><%= group.memberships.where(status: "Accepted").count %></strong> members</p>
                  </div>
                </div>

              <% end %>
            </div>

          <% end %>
        </div>

      </div>
  </div>
</div>
